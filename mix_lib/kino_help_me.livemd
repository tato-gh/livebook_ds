defmodule Kino.HelpMe do
  use Kino.JS
  use Kino.JS.Live

  alias Kino.HelpMe.NotebookHelper
  alias Kino.HelpMe.AICodeGenerator

  def new(env_file) do
    file_path = env_file |> URI.parse() |> Map.get(:path)
    Kino.JS.Live.new(__MODULE__, %{file_path: file_path})
  end

  @impl true
  def init(data, ctx), do: {:ok, assign(ctx, data: data)}

  @impl true
  def handle_connect(ctx), do: {:ok, %{}, ctx}

  @impl true
  def handle_event("generate", _params, ctx) do
    data = ctx.assigns.data

    # ã‚»ãƒƒã‚·ãƒ§ãƒ³ã‚’å–å¾—
    {:ok, {livebook_node, session}} = NotebookHelper.find_session_by_file(data.file_path)
    session_pid = session.pid

    # ãƒãƒ¼ãƒˆãƒ–ãƒƒã‚¯å…¨ä½“ã‚’å–å¾—
    {_notebook, all_cells} = NotebookHelper.get_all_cells(livebook_node, session_pid)

    # `h:`ãƒãƒ¼ã‚«ãƒ¼ã‚’æŒã¤ã‚»ãƒ«ã‚’æŠ½å‡º
    target_cells = Enum.filter(all_cells, &NotebookHelper.has_instruction_marker?(&1.source))

    if Enum.empty?(target_cells) do
      broadcast_event(ctx, "status", %{message: "No cells with h: marker found"})
    else
      # 1å›ã®APIå‘¼ã³å‡ºã—ã§å…¨ã‚»ãƒ«ã‚’å‡¦ç†
      case AICodeGenerator.generate_code_batch(all_cells) do
        {:ok, cell_updates} ->
          # å„ã‚»ãƒ«ã‚’æ›´æ–°
          Enum.each(cell_updates, fn {cell_id, new_content} ->
            original_cell = Enum.find(target_cells, &(&1.id == cell_id))

            if original_cell do
              NotebookHelper.update_cell(
                livebook_node,
                session_pid,
                cell_id,
                original_cell.source,
                new_content
              )
            end
          end)

          broadcast_event(ctx, "status", %{message: "âœ“ Updated #{map_size(cell_updates)} cell(s)"})

        {:error, reason} ->
          broadcast_event(ctx, "status", %{message: "Error: #{inspect(reason)}"})
      end
    end

    {:noreply, ctx}
  end

  asset "main.js" do
    """
    export function init(ctx, data) {
      ctx.root.innerHTML = `
        <div style="padding: 16px; background: #f5f5f5; border-radius: 8px;">
          <button id="generate-btn" style="padding: 10px 20px; background: #2196F3; color: white; border: none; border-radius: 4px; cursor: pointer; font-size: 14px;">
            ğŸ¤– Help Me
          </button>
          <span id="status" style="margin-left: 12px; color: #666;"></span>
        </div>
      `;

      const btn = ctx.root.querySelector("#generate-btn");
      const status = ctx.root.querySelector("#status");

      btn.addEventListener("click", () => {
        btn.disabled = true;
        btn.textContent = "â³ Generating...";
        status.textContent = "";
        ctx.pushEvent("generate", {});
      });

      ctx.handleEvent("status", ({ message }) => {
        btn.disabled = false;
        btn.textContent = "ğŸ¤– Help Me";
        status.textContent = message;
        setTimeout(() => {
          status.textContent = "";
        }, 3000);
      });
    }
    """
  end
end
